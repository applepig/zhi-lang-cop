{
  "name": "zhi-lang-cop",
  "version": "0.2.0",
  "private": true,
  "description": "Textlint rule to avoid PRC Chinese terms in Taiwan Chinese documents",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "dev:core": "pnpm --filter zhi-lang-cop-core dev",
    "lint": "eslint packages/*/src --ext .ts",
    "format": "prettier --write \"packages/*/src/**/*.ts\""
  },
  "keywords": ["textlint", "chinese", "taiwan", "linter"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vercel/node": "^3.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0"
  }
}
