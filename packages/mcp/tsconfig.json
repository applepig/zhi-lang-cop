{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "../../",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "../core/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
